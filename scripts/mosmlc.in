#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@mosmllibdir@
libexecdir=@mosmllibexecdir@
mosmlbin=@bindir@
version=@VERSION@
git_head=@GITHEAD@

linkalso=true
includes=""
compopt="-conservative"
linkopt=""
custom=""
linkfiles=""
linkout=a.out
context="-structure"

while : ; do
  case $1 in
    "")
      break;;
    *.sml)
      $bindir/camlrunm $libexecdir/mosmlcmp -stdlib $libdir $includes $compopt $context $1 || exit $?
      case $1 in
	    */*)
	    context="$context `dirname $1`/`basename $1 .sml`.ui"
	    ;;
	    *) context="$context `basename $1 .sml`.ui"
	    ;;
      esac
      linkfiles="$linkfiles $1";;
    *.sig)
      $bindir/camlrunm $libexecdir/mosmlcmp -stdlib $libdir $includes $compopt $context $1 || exit $?
      case $1 in
	    */*)
	    context="$context `dirname $1`/`basename $1 .sig`.ui"
	    ;;
	    *) context="$context `basename $1 .sig`.ui"
	    ;;
      esac
      ;;
    *.ui)
      context="$context $1"
      ;;
    *.uo)
      linkfiles="$linkfiles $1";;
    -structure|-toplevel)
      context="$context $1";;
    -c)
      linkalso=false;;
    -I|-include)
      includes="$includes -I $2"
      shift;;
    -P|-perv)
      compopt="$compopt -P $2"
      linkopt="$linkopt -P $2"
      shift;;
    -q|-quotation)
      compopt="$compopt $1";;
    -i)
      compopt="$compopt $1"
      linkopt="$linkopt $1";;
    -g|-debug)
      compopt="$compopt $1"
      linkopt="$linkopt $1";;
    -m|-msgstyle)
      compopt="$compopt -msgstyle $2"
      shift;;
    -noheader)
      linkopt="$linkopt $1";;
    -noautolink)
      linkopt="$linkopt $1";;
    -o|-exec)
      linkout=$2
      shift;;
    -standalone)
      linkopt="$linkopt $1";;
    -stdlib)
      stdlib=$2
      shift;;
    -v|-version)
	  echo "Project Ex-SML, version ${version}"
	  echo "  git commit ${git_head}"
	  echo "  (standard library from $libdir)"
	  $bindir/camlrunm -V
	  $bindir/camlrunm $libexecdir/mosmlcmp -version
	  $bindir/camlrunm $libexecdir/mosmllnk -version;;
    -imptypes)
      compopt="$compopt $1";;
    -valuepoly)
      compopt="$compopt $1";;
    -orthodox|-conservative|-liberal)
      compopt="$compopt $1";;
    -files)
      linkfiles="$linkfiles $1 $2"
      shift;;
    -*)
      echo "Unknown option \"$1\", ignored" >&2;;
    *)
      echo "I don't know what to do with file \"$1\", ignored" >&2;;
  esac
  shift
done

if $linkalso && test -n "$linkfiles"; then
  $bindir/camlrunm $libexecdir/mosmllnk -stdlib $libdir $includes $custom $linkopt \
    -exec $linkout $linkfiles || exit $?
fi

exit 0
